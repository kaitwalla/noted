# Database
# Use port 5434 to avoid conflicts (5432 is commonly used)
DATABASE_URL=postgres://noted:noted_dev_password@localhost:5434/noted?sslmode=disable

# JWT Authentication
JWT_SECRET=your-secret-key-at-least-32-characters
JWT_EXPIRATION=15        # minutes
REFRESH_EXPIRY=10080     # minutes (7 days)

# Server
PORT=8080
GO_ENV=development

# CORS - comma-separated list
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Storage Backend Configuration
# Backend selection: "local" or "s3"
STORAGE_BACKEND=local

# Local storage settings
IMAGE_STORAGE_PATH=./uploads
STORAGE_SIGNING_SECRET=your-signing-secret-at-least-32-characters
STORAGE_URL_EXPIRY=1h

# S3-compatible storage (R2, DO Spaces, MinIO)
# Uncomment and configure for S3 backend
# S3_BUCKET=my-bucket
# S3_REGION=us-east-1
# S3_ENDPOINT=                    # Custom endpoint for R2/DO/MinIO
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_USE_PATH_STYLE=false         # true for MinIO
# S3_PUBLIC_URL=                  # Optional CDN URL

# Web (Vite)
# Use port 8081 to avoid conflicts (8080 is commonly used)
VITE_API_URL=http://localhost:8081/api
