FROM golang:1.23-alpine

WORKDIR /app

# Install air for hot reload
RUN go install github.com/air-verse/air@v1.52.3

# Copy go mod files first for caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run with air for hot reload
CMD ["air", "-c", ".air.toml"]
